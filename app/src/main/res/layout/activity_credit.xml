<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/im1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/back"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_logo"
            android:layout_width="match_parent"
            android:layout_height="243dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_credit"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/logo" />

        <android.support.constraint.Guideline
            android:id="@+id/guideline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="40dp"
            tools:layout_editor_absoluteX="7dp"
            tools:layout_editor_absoluteY="237dp">

            <TextView
                android:id="@+id/Score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Meilleur Score "
                android:textAlignment="center"
                android:textColor="@android:color/background_light"
                android:textSize="22sp"
                tools:layout_editor_absoluteX="156dp"
                tools:layout_editor_absoluteY="352dp" />

            <TextView
                android:id="@+id/scoreBall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Score jeux balls : "
                android:textAlignment="center"
                android:textColor="@android:color/background_light"
                android:textSize="14sp"
                tools:layout_editor_absoluteX="156dp"
                tools:layout_editor_absoluteY="299dp" />

            <TextView
                android:id="@+id/scoreCompass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Score jeux compass : "
                android:textAlignment="center"
                android:textColor="@android:color/background_light"
                android:textSize="14sp"
                tools:layout_editor_absoluteX="156dp"
                tools:layout_editor_absoluteY="352dp" />

            <TextView
                android:id="@+id/scoreQuizz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Score jeux quizz :  "
                android:textAlignment="center"
                android:textColor="@android:color/background_light"
                android:textSize="14sp"
                tools:layout_editor_absoluteX="156dp"
                tools:layout_editor_absoluteY="411dp" />

            <TextView
                android:id="@+id/scoreFinal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Score Final :"
                android:textAlignment="center"
                android:textColor="@android:color/background_light"
                android:textSize="14sp"
                tools:layout_editor_absoluteX="156dp"
                tools:layout_editor_absoluteY="461dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="40dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/credit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Credit"
                    android:textAlignment="center"
                    android:textColor="@android:color/background_light"
                    android:textSize="22sp"
                    tools:layout_editor_absoluteX="156dp"
                    tools:layout_editor_absoluteY="352dp" />

                <TextView
                    android:id="@+id/projet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Projet ESIR 2018-2019"
                    android:textAlignment="center"
                    android:textColor="@android:color/background_light"
                    android:textSize="14sp"
                    tools:layout_editor_absoluteX="156dp"
                    tools:layout_editor_absoluteY="352dp" />

                <TextView
                    android:id="@+id/dev"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Développeurs"
                    android:textAlignment="center"
                    android:textColor="@android:color/background_light"
                    android:textSize="14sp"
                    tools:layout_editor_absoluteX="156dp"
                    tools:layout_editor_absoluteY="299dp" />

                <TextView
                    android:id="@+id/name1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Guépéroux Juilen "
                    android:textAlignment="center"
                    android:textColor="@android:color/background_light"
                    android:textSize="14sp"
                    tools:layout_editor_absoluteX="156dp"
                    tools:layout_editor_absoluteY="411dp" />

                <TextView
                    android:id="@+id/name2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Stéphant Thomas"
                    android:textAlignment="center"
                    android:textColor="@android:color/background_light"
                    android:textSize="14sp"
                    tools:layout_editor_absoluteX="156dp"
                    tools:layout_editor_absoluteY="461dp" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


    <Button
        android:id="@+id/btn_backmenu_credit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@drawable/menu_button_shape"
        android:text="@string/back_menu"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.881" />

</android.support.constraint.ConstraintLayout>